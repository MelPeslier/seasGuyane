{% extends 'layouts/base.html.twig' %}

{% block title 'Pédagogie'%}

{% block body %}
    <h1>Tous les cours</h1>

        {% set cour_compteur = cours|length %}    

        {{ cour_compteur }}
    
    <a href="{{ path('app_pedagogie_creer') }}">Créer un cour</a>

    {% for row in cours|batch(3) %}
    <div class="row mb-5">
        {% for cour in row %}
            <div class="col-md-4">
                <article class="cour bg-white rounded shadow">
                    <div class="cour mw-100 overflow-hidden rounded-top">
                        <a href=" {{ path('app_pedagogie_afficher', {'id': cour.id}) }} ">
                            <img src="{{ cour.imageFondName ? vich_uploader_asset(cour) : asset('images/placeholders/placeholder.png')}}">
                        </a>
                    </div>
                        <h2><a href=" {{ path('app_pedagogie_afficher', {'id': cour.id}) }} ">{{ cour.titre() }}</a></h2>
                        <p class="lead">{{ cour.description }}</p>
                </article>
            </div>
        {% else %}
            <p class="h1 mt-5 text-center">Pas encore de cours !</p>
        {% endfor %}
    </div>
    {% endfor %}


{% endblock %}