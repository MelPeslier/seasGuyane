{% extends 'base.html.twig' %}

{% block title 'cour #' ~ cour.id %}

{% block body %}
    <h1>{{ cour.titre }}</h1>
    <p>{{ cour.descriptionBreve }}</p>
    <p>{{ cour.description }}</p>

    <img src="{{ vich_uploader_asset(cour) }}" alt="{{ cour.imageName }}">
    <p>{{ cour.imageName }}</p>

    <p><a href="{{ path('app_pedagogie_modifier', {id:cour.id}) }}">Modifier</a></p>
    <p><a href="{{ path('app_pedagogie') }}">Retour</a></p>
{% endblock %}
