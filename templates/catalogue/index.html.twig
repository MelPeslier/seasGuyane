{% extends 'layouts/base.html.twig' %}

{% block title %}Catalogue{% endblock %}


       {% block stylesheets %}
            <link rel="stylesheet" href="https://unpkg.com/leaflet@1.8.0/dist/leaflet.css" integrity="sha512-hoalWLoI8r4UszCkZ5kL8vayOGVae1oxXe/2A4AO6J9+580uKHDO3JdHb7NzwwzK5xr/Fs0W40kiNHxM9vyTtQ==" crossorigin="" />
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            <script src="https://unpkg.com/leaflet@1.8.0/dist/leaflet.js" integrity="sha512-BB3hKbKWOc9Ez/TAwyWxNXeoV9c1v6FIeYiBieIWkpLjauysF18NzgR1MBNBXf8/KABdlkX68nAhlwcDFLGPCQ==" crossorigin=""></script>
            {{ encore_entry_script_tags('app') }}
        {% endblock %}

{% block body %}

    {# <div id="map"></div> #}

    {# {% if app.user %} #}
        <h1>
            <a href="{{ path('app_catalogue_creer') }}">Créer une donnée Seas</a>
        </h1>
    {# {% endif %} #}

    {% for row in donneeSeas|batch(3) %}
    <div class="row mb-5">
        {% for donneeSea in row %}
            <div class="col-md-4 mb-5">
                <article class="cour bg-white rounded shadow">
                    <div class="cour mw-100 overflow-hidden rounded-top">
                        <a href=" {{ path('app_catalogue_afficher', {'id': donneeSeas.id}) }} ">
                            <img src="{{ donneeSeas.donnee_seas }}">
                        </a>
                    </div>
                    <div class="p-3">
                        <h2 class="text-break"><a href=" {{ path('app_catalogue_afficher', {'id': donneeSeas.id}) }} ">{{ donneeSeas.donnee_seas() }}</a></h2>
                        <p class="lead text-break">{{ donneeSeas.donnee_seas|u.truncate(100) }}...</p>
                        <p class="text-break">{{ donneeSeas.donnee_seas }}</p>
                    </div>
                </article>
            </div>
        {% endfor %}
    </div>
    {% else %}
        <p class="h1 mt-5 text-center">Pas encore de données... !</p>
    {% endfor %}

{% endblock %}
